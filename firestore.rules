rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 📖 القراءة مسموحة للجميع (عدّلها لاحقًا لو حبيت)
    match /{document=**} {
      allow read: if true;
      // ✍️ الكتابة فقط لمن لديه مصادقة (حتى anonymous)
      allow write: if request.auth != null;
    }
  }
}
